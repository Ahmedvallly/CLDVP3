@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
@if (Model != null)
{
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductDescription</td>
                <td>@product.ProductPrice.ToString("C")</td>
                <td>
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.ProductId">Add to Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p>No products found.</p>
}
<div>
    <a asp-controller="Cart" asp-action="Cart">View Cart</a>
</div>