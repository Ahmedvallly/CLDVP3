@model List<Notification>
@{
    ViewData["Title"] = "Your Notifications";
}

<h1>Your Notifications</h1>

@if (Model.Any())
{
    <form asp-action="ClearNotifications" method="post">
        <button type="submit" class="btn btn-danger mb-3">Clear All Notifications</button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var notification in Model)
            {
                <tr>
                    <td>@notification.Id</td>
                    <td>@notification.NotificationType</td>
                    <td>
                        <form asp-action="ClearNotification" asp-route-id="@notification.NotificationId" method="post">
                            <button type="submit" class="btn btn-sm btn-warning">Clear</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no notifications.</p>
}